<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout"/>

    <TextView
        android:id="@+id/sent_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sent By" />

    <TextView
        android:id="@+id/sent_subj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subject" />

    <TextView
        android:id="@+id/sent_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type"  />

    <TextView
        android:id="@+id/sent_yr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Academic Year"  />

    <TextView
        android:id="@+id/sent_iso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ISO Number"  />

    <TextView
        android:id="@+id/sent_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time Stamp"  />

    <ListView
        android:id="@+id/lv_sent_mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>